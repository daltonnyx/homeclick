@using VCMS.Lib.Resources
@using VCMS.Lib.Models

@{
    ViewBag.Title = Strings.Projects;
}

<p>
    <a href="@Url.Action("Create")" class="btn btn-lime"><i class="fa fa-plus" aria-hidden="true"></i> @Strings.CreateNew</a>
</p>
@foreach (var pair in ViewBag.Dic as Dictionary<string, Dictionary<string, int>> ?? new Dictionary<string, Dictionary<string, int>>())
{
    <p class="bg-white">
        @Html.DropDownList(pair.Key, pair.Value.Select(o => new SelectListItem { Text = o.Key, Value = o.Value.ToString() }), "All - " + pair.Key, new { @class = "form-control chosen extra-search", data_key = pair.Key, tabindex = "-1", style = "display: none;" })
    </p>
}

<table id="dataTable" class="table table-striped table-hover fill-head">
    <thead>
        <tr>
            <th>
                @Strings.Name
            </th>
            <th>
                @Strings.Image
            </th>
            <th>
                @Strings.Status
            </th>
            <th>
            </th>
        </tr>
    </thead>
</table>

<div class="modal fade" id="deleteConfirmModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="exampleModalLabel">New message</h4>
            </div>
            <div class="modal-body">
                <p></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                <button type="button" class="btn btn-primary btn-yes">Yes</button>
            </div>
        </div>
    </div>
</div>

@section breadcrumb {
    @{
        var viewName = Html.ViewContext.RouteData.GetRequiredString("action");
    }
    <li>
        <a href="@Url.Action("Dashboard","Pages")">
            <i class="fa fa-home"></i> Home
        </a>
        <span class="divider"><i class="fa fa-angle-right"></i></span>
    </li>
    <li>@ViewBag.Title</li>
}

@section styles {
    @Styles.Render("~/bundles/manager/datatables/css")
    <link href="~/Areas/Manager/Content/lib/jquery-chosen/Chosen.min.css" rel="stylesheet" />
}

@section scripts {
    @Scripts.Render("~/bundles/manager/datatables")
    <script src="~/Areas/Manager/Content/lib/jquery-chosen/chosen.jquery.min.js"></script>

    <script>
        var thumbImg = function (data, type, full, meta) {
            if (!data) data = "noimagefound.png";
            return '<div class="list-thumb"><img src="' + '@Url.GetImageUploadFolder()' + data + '"></div>';
        }

        var simple_linkBtns = function (data, type, full, meta) {
            var param = '?projectId=' + data;
            return '<div class="table-action">' +
                        '<a class="btn btn-sm show-tooltip" data-placement="top" data-original-title="Details" href="@Url.Action("Details")' + param + '" data-original-title="View"><i class="fa fa-search-plus"></i></a>' +
                        '<a class="btn btn-sm show-tooltip" data-placement="top" data-original-title="Edit" href="@Url.Action("Edit")' + param + '" data-original-title="Edit"><i class="fa fa-edit"></i></a>' +
                        '<a class="btn btn-sm btn-danger show-tooltip" data-placement="top" data-original-title="Delete" href="#" data-toggle="modal" data-target="#deleteConfirmModal" data-id="' + data + '" ><i class="fa fa-trash-o"></i></a>' +
                    '</div>';
        }

        var table = $('#dataTable');
        var dataTable = table.DataTable({
            "autoWidth": false,
            "serverSide": true,
            "ajax": {
                "type": "POST",
                "url": '@Url.Action("DataHandler")',
                "contentType": 'application/json; charset=utf-8',
                'data': function (data) {
                    var extraSearchs = $('.extra-search');
                    if (extraSearchs.length > 0) {
                        data.args = {};
                        for (var i = 0; i < extraSearchs.length; i++) {
                            var current = $(extraSearchs[i]);
                            if (current.data('key') && current.val())
                                data.args[current.data('key')] = current.val();
                        }
                    }
                    return data = JSON.stringify(data);
                }
            },
            responsive: false,
            "columns": [
               { "data": "img", "render": thumbImg },
               { "data": "name" },
               { "data": "status" },
               { "data": "id", "render": simple_linkBtns }],
            "columnDefs": [
                { "searchable": false, "orderable": false, "targets": 0, },
                { "searchable": false, "orderable": false, "targets": 2, },
                { "searchable": false, "orderable": false, "targets": 3, }],
            "drawCallback": function (settings) {
                $('.show-tooltip').tooltip({ container: 'body', delay: { show: 500 } });
                $('.show-popover').popover();
            }
        });

        $('.extra-search').bind('change', dataTable.ajax.reload())

        $('#deleteConfirmModal').on('show.bs.modal', function (event) {
            var modal = $(this).data('id', $(event.relatedTarget).data('id'));
            modal.find('.modal-body p').text('You are sure?');
        });

        $('#deleteConfirmModal').on('click', '.btn-yes', function (e) {
            var $modalDiv = $(e.delegateTarget);
            $.ajax({
                url: '@Url.Action("Delete")',
                type: 'DELETE',
                data: { 'projectId': $modalDiv.data('id') },
                success: function (data) {
                    if (data > 0) {
                        $modalDiv.modal('hide');
                        $('#dataTable').DataTable().ajax.reload();
                    }
                    else
                        $modalDiv.find('.modal-body p').empty().append(data);
                }
            });
        });
    </script>
}
