@using VCMS.Lib.Common
@using VCMS.Lib.Resources

@{
    ViewBag.Title = Strings.Categories;
}
<div class="clearfix content">
    <div class="pull-left">
        @Html.DropDownList(ConstantKeys.CATEGORY_TYPE, new SelectList(ViewData[ConstantKeys.CATEGORY_TYPES] as IQueryable, "Id", "Name", null), new { @class = "extra-search form-control", style = "min-width:150px" })
    </div>
</div>
<div class="tabbable">
    <div class="tab-content">
        <div class="tab-pane fade active in">
            <div class="clearfix btn-toolbar">
                <div class="btn-group pull-right">
                    <a class="btn btn-circle show-tooltip disabled" title="" href="#" data-original-title="Delete selected" data-toggle="modal" data-target="#deleteConfirmModal"><i class="fa fa-trash-o"></i></a>
                    <a class="btn btn-circle show-tooltip disabled" title="" href="#" data-original-title="Refresh"><i class="fa fa-repeat"></i></a>
                </div>
                <div class="btn-group pull-right" data-toggle="buttons-checkbox">
                    <a class="btn btn-circle show-tooltip accordion-toggle" data-toggle="collapse" href="#collapse" data-original-title="Create new category"><i class="fa fa-plus"></i></a>
                </div>
            </div>
            <div id="collapse" class="panel-collapse collapse">
                <hr />
                @using (Html.BeginForm("Create", "Categories", FormMethod.Post, new { id="CreateCategoryForm" }))
                {
                    <div class="form-horizontal">
                        <fieldset>
                            <div class="form-group">
                                @Html.Label("Name", new { @class = "control-label col-md-3" })
                                <div class="col-md-9">
                                    @Html.TextBox("Name", null, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.Label("Description", new { @class = "control-label col-md-3" })
                                <div class="col-md-9">
                                    @Html.TextBox("Description", null, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.Label("Parent Category", new { @class = "control-label col-md-3" })
                                <div class="col-md-9">
                                    @Html.DropDownList("parentCategory", new SelectList(new List<string>()),"None", new { @class = "form-control" })
                                </div>
                            </div>
                        </fieldset>
                        <div class="clearfix">
                            <input type="submit" name="submit" value="Create" class="btn btn-info pull-right"/>
                        </div>
                    </div>
                }
            </div>
            <table id="dataTable" class="table display table-striped table-hover fill-head">
                <thead>
                    <tr>
                        <th style="width:18px;">
                            <input type="checkbox" />
                        </th>
                        <th>
                            @Strings.Name
                        </th>
                        <th>
                            @Strings.Description
                        </th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@Html.Partial("Widgets/DeleteConfirmModal")

@section breadcrumb {
    <li>
        <a href="@Url.Action("Dashboard","Pages")">
            <i class="fa fa-home"></i> Home
        </a>
        <span class="divider"><i class="fa fa-angle-right"></i></span>
    </li>
    <li class="active">@ViewBag.Title</li>
}

@section styles {
    @Styles.Render("~/bundles/manager/datatables/css")
}

@section scripts {
    @Scripts.Render("~/bundles/manager/datatables")
    <script src="~/Areas/Manager/Content/lib/moment.js"></script>

    <script>
        $('#CreateCategoryForm').submit(function () {
            var form = $(this);
            $.ajax({
                url: form.attr('action'),
                data: {
                    'name': form.find('input[name="Name"]').value,
                    'description': form.find('input[name="description"]').value,
                    'parentCategory': form.find('input[name="parentCategory"]').value
                },
                success: function (data) {
                    dataTable.ajax.reload();
                }
            });

            event.preventDefault();
        });

        var dataTable = $('#dataTable').DataTable({
            autoWidth: false,
            serverSide: true,
            ajax: {
                type: "POST",
                url: '@Url.Action("DataHandler")',
                contentType: 'application/json; charset=utf-8',
                data: function (data) {
                    var extraSearchs = $('.extra-search');
                    if (extraSearchs.length > 0) {
                        data.args = {};
                        for (var i = 0; i < extraSearchs.length; i++) {
                            var current = $(extraSearchs[i]);
                            if (current.attr('id') && current.val())
                                data.args[current.attr('id')] = current.val();
                        }
                    }
                    return data = JSON.stringify(data);
                },
                beforeSend: function () {
                    $('#ParentCategory').html('<option>None</option>');
                }
            },
            processing: true,
            bFilter: false,
            bPaginate: false,
            ordering: false,
            columns: [
               { "data": "id", render: function (data, type, full, meta) { return '<input type="checkbox" class="select-item" value="' + data + '"/>' } },
               {
                   "data": "name", render: function (data, type, full, meta) {
                       var str1 = '';
                       var str2 = '';
                       for (var i = 0; i < full.level; i++) {
                           str1 += '---- ';
                           str2 += '\xA0\xA0\xA0\xA0';
                       }
                       $('<option/>').val(full.id).text(str2 + data).appendTo($('#ParentCategory'));
                       return str1 + data;
                   }
               },
               { "data": "description"}],
            columnDefs: [{ "searchable": false, "orderable": false, "targets": 0 }],
        });
        var tableReloadFunction = function () {
            dataTable.ajax.reload();
        }
        $('.extra-search').bind('change', tableReloadFunction);
    </script>
    @Html.RenderDelayed("deleteConfirmModal-script")
}
