@using VCMS.Lib.Resources
@using VCMS.Lib.Models.Business
@{
    ViewBag.Title = Strings.Collections;
    var deleteMessage = "Delete this Collection?";

    var cSelectListItems = new List<SelectListItem>();
    var cSelectListGroups = new List<SelectListGroup>();
    foreach (var category in ViewBag.Categories as IEnumerable<Category>)
    {
        var selectListGroup = new SelectListGroup
        {
            Name = category.Name
        };
        foreach (var child in category.CategoryChildren)
        {
            var selectListItem = new SelectListItem
            {
                Group = selectListGroup,
                Value = child.Id.ToString(),
                Text = child.Name,
            };
            cSelectListItems.Add(selectListItem);
        }
    }
}

<p>
    <a href="@Url.Action("Create")" class="btn btn-lime"><i class="fa fa-plus" aria-hidden="true"></i> @Strings.CreateNew</a>
</p>

<p id="extraSearch" class="bg-white clearfix">
  @Html.DropDownList("categoryChose", cSelectListItems, "Select a category",new { @class = "form-control chosen", tabindex = "-1", style = "display: none;" })
</p>

<table id="dataTable" class="table table-striped table-hover fill-head" >
    <thead>
        <tr>
            <th>
                @Strings.Name
            </th>
            <th>
            </th>
        </tr>
    </thead>
</table>

<div class="modal fade" id="deleteConfirmModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="exampleModalLabel">New message</h4>
            </div>
            <div class="modal-body">
                <p>@deleteMessage</p>
                <input type="hidden" id="hiddenId" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                <button type="button" class="btn btn-primary btn-yes">Yes</button>
            </div>
        </div>
    </div>
</div>

@section breadcrumb {
    @{
        var viewName = Html.ViewContext.RouteData.GetRequiredString("action");
    }
    <li>
        <a href="@Url.Action("Dashboard","Pages")">
            <i class="fa fa-home"></i> Home
        </a>
        <span class="divider"><i class="fa fa-angle-right"></i></span>
    </li>
    <li>@ViewBag.Title</li>
}

@section styles {
    @Styles.Render("~/bundles/manager/datatables/css")
    <link href="~/Areas/Manager/Content/lib/jquery-chosen/Chosen.min.css" rel="stylesheet" />
    }

@section scripts {
    @Scripts.Render("~/bundles/manager/datatables")
    <script src="~/Areas/Manager/Content/lib/jquery-chosen/chosen.jquery.min.js"></script>

    <script>
       var simple_linkBtns = function (data, type, full, meta) {
            var param = '?id=' + data;
            return   '<div class="table-action">' +
                        '<a class="btn btn-sm show-tooltip" data-placement="top" data-original-title="Edit" href="@Url.Action("Edit")' + param + '" data-original-title="Edit"><i class="fa fa-edit"></i></a>' +
                        '<a class="btn btn-sm btn-danger show-tooltip" data-placement="top" data-original-title="Delete" href="#" data-toggle="modal" data-target="#deleteConfirmModal" data-id="' + data + '" ><i class="fa fa-trash-o"></i></a>' +
                    '</div>';
       }

        $(document).ready(function () {
            var table = $('#dataTable');
            var dataTable = table.DataTable({
                "autoWidth": false,
                "serverSide": true,
                "ajax": {
                    "type": "POST",
                    "url": '@Url.Action("DataHandler")',
                    "contentType": 'application/json; charset=utf-8',
                    'data': function (data)
                    {
                        var extraParam = $('#categoryChose').val();
                        if (extraParam)
                            data.category_id = extraParam;

                        var v = JSON.stringify(data);
                        return data = v;
                    }
                },
                "responsive": false,
                "columns": [
                   { "data": "name" },
                   { "data": "id", "render": simple_linkBtns }],

                "columnDefs": [{
                    "searchable": false,
                    "orderable": false,
                    "targets": 1,
                }],
                "drawCallback": function (settings) {
                    $('.show-tooltip').tooltip({ container: 'body', delay: { show: 500 } });
                    $('.show-popover').popover();
                }
            });

            $('#categoryChose').bind('change', function () {
                dataTable.ajax.reload();
            });

            $('#deleteConfirmModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                var objId = button.data('id');
                var modal = $(this);
                modal.find('.modal-body p').text('@deleteMessage');
                modal.find('.modal-body input').val(objId);
            });

            $('#deleteConfirmModal').on('click', '.btn-yes', function (e) {
                var $modalDiv = $(e.delegateTarget);
                var input = $modalDiv.find('.modal-body input');
                var objId = input.val();
                var url = '@Url.Action("Delete")';
                $.ajax({
                    url: url,
                    data: { 'id': objId },
                    success: function (data) {
                        if (data === 'Success') {
                            $modalDiv.modal('hide');
                            $('#dataTable').DataTable().ajax.reload();
                        }
                        else
                            $modalDiv.find('.modal-body p').empty().append(data);
                    }
                });
            });
        });
    </script>
}
