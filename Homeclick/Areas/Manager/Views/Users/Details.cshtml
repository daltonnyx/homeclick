@model VCMS.Lib.Models.UserViewModel

@{
    ViewBag.Title = "Users";
    ViewBag.FormName = "Details";
    Layout = "~/Areas/Manager/Views/Shared/_Layout_Form.cshtml";
}

<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.UserName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Lockout)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Lockout)
        </dd>
        @if (Model.Lockout)
        {
            <dt>
                @Html.DisplayNameFor(model => model.LockoutEndDate)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.LockoutEndDate)
            </dd>
        }

    </dl>
</div>

@section breadcrumb {
    @{
        var viewName = Html.ViewContext.RouteData.GetRequiredString("action");
    }
    <li>
        <a href="@Url.Action("Dashboard","Pages")">
            <i class="fa fa-home"></i> Home
        </a>
        <span class="divider"><i class="fa fa-angle-right"></i></span>
    </li>
    <li>
        <a href="@Url.Action("List")">
            @ViewBag.Title
        </a>
        <span class="divider"><i class="fa fa-angle-right"></i></span>
    </li>
    <li class="active">@ViewBag.FormName</li>
}
