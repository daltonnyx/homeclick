@using VCMS.Lib.Resources

@{
    ViewBag.Title = "List";
}
<p>
    <a href="@Url.Action("Create","Users")" class="btn btn-lime"><i class="fa fa-plus" aria-hidden="true"></i> @Strings.CreateNew</a>
</p>

<table id="dataTable" class="table table-striped table-hover fill-head" >
    <thead>
        <tr>
            <th>
                @Strings.UserName
            </th>
            <th>
                @Strings.Email
            </th>
            <th>
                @Strings.Lockout
            </th>
            <th>
            </th>
        </tr>
    </thead>
</table>

@section breadcrumb {
    @{
        var viewName = Html.ViewContext.RouteData.GetRequiredString("action");
    }
    <li>
        <a href="@Url.Action("Dashboard","Pages")">
            <i class="fa fa-home"></i> Home
        </a>
    </li>
}

@section styles {
    @Styles.Render("~/bundles/manager/datatables/css")
}

@section scripts {
    @Scripts.Render("~/bundles/manager/datatables")

    <script>
        var simple_checkbox = function (data, type, full, meta) {
            var is_checked = data == true ? "checked" : "";
            return '<input type="checkbox" class="checkbox" disabled ' + is_checked + ' />';
        }

        var simple_linkBtns = function (data, type, full, meta) {
            var param = '?user_id=' + data;
            return   '<div class="table-action">' +
                        '<a class="btn btn-sm show-tooltip" data-placement="top" data-original-title="View details" href="@Url.Action("Details")' + param + '" data-original-title="View"><i class="fa fa-search-plus"></i></a>' +
                        '<a class="btn btn-sm show-tooltip" data-placement="top" data-original-title="Edit account" href="@Url.Action("Edit")' + param + '" data-original-title="Edit"><i class="fa fa-edit"></i></a>' +
                        '<a class="btn btn-sm show-tooltip" data-placement="top" data-original-title="Change password" href="@Url.Action("ChangePassword")' + param + '" data-original-title="Edit"><i class="fa fa-asterisk" aria-hidden="true"></i></a>' +
                        '<a class="btn btn-sm btn-danger show-tooltip" data-placement="top" data-original-title="Delete account" href="@Url.Action("Delete")' + param + '" data-original-title="Delete"><i class="fa fa-trash-o"></i></a>' +
                    '</div>';
        }

        $(document).ready(function () {
            var dataTable = $('#dataTable');
            var table = dataTable.DataTable({
                "autoWidth": false,
                "serverSide": true,
                "ajax": {
                    "type": "POST",
                    "url": '@Url.Action("DataHandler")',
                    "contentType": 'application/json; charset=utf-8',
                    'data': function (data) { return data = JSON.stringify(data); }
                },

                responsive: false,

                "columns": [
                   { "data": "UserName" },
                   { "data": "Email" },
                   { "data": "Lockout", "render": simple_checkbox },
                   { "data": "Id", "render": simple_linkBtns }],

                "order": [[1, 'asc']],
                "columnDefs": [{
                    "searchable": false,
                    "orderable": false,
                    "targets": 3,
                }],
                "drawCallback": function (settings) {
                    $('.show-tooltip').tooltip({ container: 'body', delay: { show: 500 } });
                    $('.show-popover').popover();
                }
            });
        });
    </script>
}
