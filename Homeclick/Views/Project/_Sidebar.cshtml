@using VCMS.Lib.Models
@model IEnumerable<Category>

@{
}

<div class="sidebar-box">
    <div class="box">
        <div class="box-title">
            <h3 class="title-sidebar title-cate-sidebar">Dự án</h3>
            <div class="box-tool">
                <a data-action="collapse" href="#"><i class="nav-arrow"></i></a>
            </div>
        </div>
        <div class="box-content clearfix">
            <ul class="category-list">
                <li class="category-link " data-category="-1"><a href="#">Tất cả</a></li>
                @foreach (var item in Model)
                {
                    <li class="category-link" data-category="@item.Id"><a href="#">@item.Name</a></li>
                }
            </ul>
            <hr />
            <section id="filter-fields">
                <div class="filter-field">
                    <h4 class="list-title">Vị trí</h4>
                    <ul>
                        <li>
                            <select id="projectCitiesSelection">
                                <option selected value="">Thành phố</option>

                            </select>
                        </li>
                        <li>
                            <select id="statesSelection">
                                <option selected value="">Quận</option>
                            </select>
                        </li>
                        <li>
                            <div style="display: inline-block; width: 100%; padding-right: 45px; position:relative">
                                <input id="filterTextBox" type="text" placeholder="Tìm kiếm" style="float: left;" />
                                <button id="filterButton" class="btn2"><i class="fa fa-search" aria-hidden="true"></i></button>
                            </div>
                        </li>
                    </ul>
                </div>
                <div class="filter-field">
                    <h4 class="list-title">Tình trạng</h4>
                    <div class="checkbox">
                        <label><input id="statu-true" type="checkbox" name="status" value="True" checked />Đã hoàn thành</label>
                    </div>
                    <div class="checkbox">
                        <label><input id="statu-false" type="checkbox" name="status" value="False" checked />Đang thi công</label>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>