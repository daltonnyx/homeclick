                    </span>
                    <h4 class="detail-value">@Model.DistributionAgency</h4>
                </p>
        </div>
    </div>
<div style="clear:both"></div>
<script>
    (function (window, document) {

        var layout = document.getElementById('layout'),
            projectSidebar = document.getElementById('projectSidebar'),
            projectSidebarLink = document.getElementById('projectSidebarLink'),
            hideprojectSidebar = document.getElementById('hideprojectSidebar');

        function toggleClass(element, className) {
            var classes = element.className.split(/\s+/),
                length = classes.length,
                i = 0;

            for (; i < length; i++) {
                if (classes[i] === className) {
                    classes.splice(i, 1);
                    break;
                }
            }
            // The className is not found
            if (length === classes.length) {
                classes.push(className);
            }

            element.className = classes.join(' ');
        }

        projectSidebarLink.onclick = function (e) {
            var active = 'active';

            e.preventDefault();
            toggleClass(layout, active);
            toggleClass(projectSidebar, active);
            toggleClass(projectSidebarLink, active);
        };

        hideprojectSidebar.onclick = function (e) {
            var active = 'active';

            e.preventDefault();
            toggleClass(layout, active);
            toggleClass(projectSidebar, active);
            toggleClass(projectSidebarLink, active);
        };

    }(this, this.document));
</script>