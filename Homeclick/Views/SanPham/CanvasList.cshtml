@using VCMS.Lib.Models
@using Newtonsoft.Json
@model IEnumerable<Product>

@{

}

@foreach (Product product in Model)
{
    var detail = product.DetailsToDictionary();
    string variants = JsonConvert.SerializeObject(product.SimpleProductOptions());
    if (detail.Keys.SingleOrDefault<string>(s => s == "data") != null)
    {

        <div class="product">
            <div class="product-image">
                <a href="#"
                   class="product-link svg-item"
                   data-name="@product.Name"
                   data-pid="@product.Id"
                   data-init="@if (detail.Keys.SingleOrDefault<string>(s => s == "initScale") != null)
                   {@detail["initScale"]}
                   else
                   { <text>0.18</text> }"
                   data-pid="@product.Id" data-svg="@Url.GetImageUploadFolder()@(detail["data"]).svg"
                   data-variants="@variants"
                   data-can-scale="@if (detail.Keys.SingleOrDefault<string>(s => s == "scale") != null)
                   {@detail["scale"]}">
                    <img src="@Url.GetImageUploadFolder()@product.Image.FullFileName"
                         data-image="@Url.GetImageUploadFolder()@product.Image.FullFileName"
                         class="svg-item"
                         data-name="@product.Name"
                         data-pid="@product.Id"
                         data-variants="@variants"
                         data-init="@if (detail.Keys.SingleOrDefault<string>(s => s == "initScale") != null)
                         {@detail["initScale"]}
                         else
                         { <text>0.18</text> }"
                         data-name="@product.Name"
                         data-svg="@Url.GetImageUploadFolder()@(detail["data"]).svg"
                         data-can-scale="@if (detail.Keys.SingleOrDefault<string>(s => s == "scale") != null)
                         {@detail["scale"]}"
                         data-zData="@if (detail.Keys.SingleOrDefault<string>(s => s == "zdata") != null)
                         {@detail["zdata"]}"
                         data-price="@if (detail.Keys.SingleOrDefault<string>(s => s == "gia") != null)
                         {@detail["gia"]}" />
                </a>
            </div>
            <div class="product-title">
                <a href="#"
                   class="product-link svg-item"
                   data-name="@product.Name"
                   data-pid="@product.Id"
                   data-variants="@variants"
                   data-init="@if (detail.Keys.SingleOrDefault<string>(s => s == "initScale") != null)
                   {@detail["initScale"]}
                   else
                   { <text>0.18</text> }"
                   data-image="@Url.GetImageUploadFolder()@product.Image.FullFileName"
                   data-svg="@Url.GetImageUploadFolder()@(detail["data"]).svg"
                   data-can-scale="@if (detail.Keys.SingleOrDefault<string>(s => s == "scale") != null)
                   {@detail["scale"]}"
                   data-zData="@if (detail.Keys.SingleOrDefault<string>(s => s == "zdata") != null)
                   {@detail["zdata"]}"
                   data-price="@if (detail.Keys.SingleOrDefault<string>(s => s == "gia") != null)
                   {@detail["gia"]}">
                    @product.Name
                </a>
            </div>
        </div>
    }
    else if (detail.Keys.SingleOrDefault<string>(s => s == "pattern") != null)
    {
        <div class="product">
            <div class="pattern-filter product-image">
                <a href="#" class="product-link">
                    <img data-pattern="@Url.GetImageUploadFolder()@(detail["pattern"]).jpg" data-price="@if (detail.Keys.SingleOrDefault<string>(s => s == "gia") != null) {@detail["gia"]}" src="@Url.GetImageUploadFolder()@product.Image.FullFileName" />
                </a>

            </div>
            <div class="product-title">
                <a href="#" class="product-link">
                    <h5 data-pattern="@Url.GetImageUploadFolder()@(detail["pattern"]).jpg" data-price="@if (detail.Keys.SingleOrDefault<string>(s => s == "gia") != null) {@detail["gia"]}">Sàn 1</h5>
                </a>
            </div>
        </div>
    }
}
