@using Homeclick.Models
@model IList<Product>


@foreach (Product product in Model)
{
    Dictionary<string, object> productArr = product.ToArray();
    Dictionary<string, object> detail = productArr["Product_detail"] as Dictionary<string, object>;
    <div class="product">
        <div class="product-image">
            <a href="#" class="product-link svg-item" data-init="@if (detail.Keys.SingleOrDefault<string>(s => s == "initScale") != null) {@detail["initScale"]} else { <text>0.21</text> }" data-pid="@product.Id" data-svg="\admin\@if (detail.Keys.SingleOrDefault<string>(s => s == "data") != null) {@detail["data"]}" data-can-scale="@if (detail.Keys.SingleOrDefault<string>(s => s == "scale") != null) {@detail["scale"]}">
                <img src="\admin\@if (detail.Keys.SingleOrDefault<string>(s => s == "image") != null) {@detail["image"]}" data-image="\admin\@if (detail.Keys.SingleOrDefault<string>(s => s == "image") != null) {@detail["image"]}" class="svg-item"
                   data-init="@if (detail.Keys.SingleOrDefault<string>(s => s == "initScale") != null) {@detail["initScale"]} else { <text>0.21</text> }"  data-name="@product.name" data-svg="\admin\@if (detail.Keys.SingleOrDefault<string>(s => s == "data") != null) {@detail["data"]}" data-can-scale="@if (detail.Keys.SingleOrDefault<string>(s => s == "scale") != null) {@detail["scale"]}" data-zData="@if (detail.Keys.SingleOrDefault<string>(s => s == "zdata") != null) {@detail["zdata"]}" data-price="@if (detail.Keys.SingleOrDefault<string>(s => s == "gia") != null) {@detail["gia"]}" />
            </a>
        </div>
        <div class="product-title">
            <a href="#" class="product-link svg-item" data-init="@if (detail.Keys.SingleOrDefault<string>(s => s == "initScale") != null) {@detail["initScale"]} else { <text>2.1</text> }" data-image="\admin\@if (detail.Keys.SingleOrDefault<string>(s => s == "image") != null) {@detail["image"]}" data-svg="\admin\@if (detail.Keys.SingleOrDefault<string>(s => s == "data") != null) {@detail["data"]}" data-can-scale="@if (detail.Keys.SingleOrDefault<string>(s => s == "scale") != null) {@detail["scale"]}">
                @product.name
            </a>
        </div>
    </div>
}
