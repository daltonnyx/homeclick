                        @Html.ValidationSummary(true)
                        <div class="row">
                            @if (TempData["Notification"] != null)
                            {
                                <div class="col-lg-12 widget notification">
                                    @TempData["Notification"]
                                </div>
                            }
                        </div>
                        <div class="row">
                            <div class="col-xs-6 widget text-left">
                                @Html.ValidationMessageFor(model => model.Name)
                            </div>

                            <div class="col-xs-6 widget text-left">
                                @Html.ValidationMessageFor(model => model.Email)
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-6 col-sm-6 text-left">
                                @Html.TextBoxFor(model => model.Name, new { @type = "text", @name = "your-name", @value = "", @size = "40", @placeholder = "Tên bạn *" })
                            </div>

                            <div class="col-xs-6 text-left">
                                @Html.TextBoxFor(model => model.Email, new { @type = "email", name = "your-email", value = "", placeholder = "Email *" })
                            </div>
                        </div>
                        <div class="row">

                            <div class="col-sm-12 widget text-left">
                                @Html.TextBoxFor(model => model.Subject, new { type = "text", name = "your-subject", value = "", placeholder = "Subject" })
                            </div>

                            <div class="col-sm-12 widget text-left">
                                @Html.ValidationMessageFor(model => model.Message)
                                @Html.TextAreaFor(model => model.Message, new { name = "your-message", cols = "40", rows = "10", placeholder = "Message" })
                            </div>
                            <p>
                                <input type="submit" value="Submit" class="question-submit">
