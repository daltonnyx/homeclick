                            <div class="product-select">
                                @Html.DropDownList("CategoryTypeSelect", new SelectList(CategoryTypes, "Id", "name"), new { @id = "CategoryTypeSelect" })
                                <select id="CategorySelect">
                                    @{Html.RenderAction("_CategoryOptions",new { categoryTypeId = CategoryTypes.FirstOrDefault().Id });}
                                </select>
                            </div>

                            <div id="Funiture-list">
                                @Html.Action("CanvasList", "SanPham")
                            </div>
                        </div>
                    </li>
