@using Homeclick.Models
@model IList<Wishlist>

@{
    var prefix = string.Empty;
    //var prefix = "\\homeclick";
}

@foreach (Wishlist wishlist in Model)
{
    Dictionary<string, object> productArr = wishlist.Product.ToArray();
    Dictionary<string, object> detail = productArr["Product_detail"] as Dictionary<string, object>;

    <div class="product" id="cart-product-@wishlist.ProductId" data-pid="@wishlist.ProductId">
        <div class="row">
            <div class="product-image col-md-4">
                <a href="#"
                   class="product-link svg-item"
                   data-name="@wishlist.Product.name"
                   data-pid="@wishlist.Product.Id"
                   data-init="@if (detail.Keys.SingleOrDefault<string>(s => s == "initScale") != null) {@detail["initScale"]} else { <text>0.18</text> }"
                   data-pid="@wishlist.Product.Id" data-svg="\admin\@if (detail.Keys.SingleOrDefault<string>(s => s == "data") != null) {@detail["data"]}"
                   data-can-scale="@if (detail.Keys.SingleOrDefault<string>(s => s == "scale") != null) {@detail["scale"]}">
                    <img class="img-responsive" 
                         src="@prefix\admin\@if (detail.Keys.SingleOrDefault<string>(s => s == "image") != null) {@detail["image"]}"
                         data-image="@prefix\admin\@if (detail.Keys.SingleOrDefault<string>(s => s == "image") != null) {@detail["image"]}" 
                         class="svg-item"
                         data-name="@wishlist.Product.name" 
                         data-pid="@wishlist.Product.Id"
                         data-init="@if (detail.Keys.SingleOrDefault<string>(s => s == "initScale") != null) {@detail["initScale"]} else { <text>0.18</text> }"  
                         data-name="@wishlist.Product.name" 
                         data-svg="\admin\@if (detail.Keys.SingleOrDefault<string>(s => s == "data") != null) {@detail["data"]}" 
                         data-can-scale="@if (detail.Keys.SingleOrDefault<string>(s => s == "scale") != null) {@detail["scale"]}" 
                         data-zData="@if (detail.Keys.SingleOrDefault<string>(s => s == "zdata") != null) {@detail["zdata"]}" 
                         data-price="@if (detail.Keys.SingleOrDefault<string>(s => s == "gia") != null) {@detail["gia"]}" />
                </a>
</div>
            <div class="product-detail col-md-8">
                <a href="#"
                   class="product-link svg-item"
                   data-name="@wishlist.Product.name"
                   data-pid="@wishlist.Product.Id"
                   data-init="@if (detail.Keys.SingleOrDefault<string>(s => s == "initScale") != null) {@detail["initScale"]} else { <text>0.18</text> }"
                   data-image="@prefix\admin\@if (detail.Keys.SingleOrDefault<string>(s => s == "image") != null) {@detail["image"]}"
                   data-svg="\admin\@if (detail.Keys.SingleOrDefault<string>(s => s == "data") != null) {@detail["data"]}"
                   data-can-scale="@if (detail.Keys.SingleOrDefault<string>(s => s == "scale") != null) {@detail["scale"]}"
                   data-zData="@if (detail.Keys.SingleOrDefault<string>(s => s == "zdata") != null) {@detail["zdata"]}"
                   data-price="@if (detail.Keys.SingleOrDefault<string>(s => s == "gia") != null) {@detail["gia"]}">
                        <h3 class="product-title">@wishlist.Product.name</h3>
                </a>
                    <a href="#" class="uk-button wishlist-remove">Xóa</a>
</div>
        </div>
    </div>
}
